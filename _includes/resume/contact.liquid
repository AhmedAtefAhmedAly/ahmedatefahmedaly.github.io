<table class="table table-cv table-sm table-borderless table-responsive table-cv-map">
  {% for content in data[1] %}
    {% if content[1] == "" or content[1] == nil %}
      {% continue %}
    {% endif %}
    {% assign label = content[0] | replace: '_', ' ' | capitalize %}
    <tr>
      <td class="p-1 pr-2 font-weight-bold">
        <b>{{ label }}</b>
      </td>
      <td class="p-1 pl-2 font-weight-light text">
        {% assign key = content[0] %}
        {% if key == 'email' or key contains 'email' %}
          <a href="mailto:{{ content[1] }}">{{ content[1] }}</a>
        {% elsif key == 'url' or key contains 'url' or key contains 'website' %}
          <a href="{{ content[1] }}" target="_blank" rel="noopener noreferrer">{{ content[1] }}</a>
        {% elsif key == 'phone' %}
          <a href="tel:{{ content[1] }}">{{ content[1] }}</a>
        {% else %}
          {{ content[1] }}
        {% endif %}
      </td>
    </tr>
  {% endfor %}
</table>
